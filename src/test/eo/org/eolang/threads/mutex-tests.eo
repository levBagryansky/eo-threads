+alias org.eolang.threads.mutex
+architect yegor256@gmail.com
+home https://github.com/objectionary/eo
+junit
+package org.eolang.threads
+version 0.0.0

[] > unsafe-lock
  mutex 100 > m
  seq > @
    m.acquire.unsafe-acquire
    m.lock.release.unsafe-release

[] > lock
  mutex 100 > m
  seq > @
    m.acquire > a
    a.release

[] > twice-lock-1
  mutex 3 > mut
  seq > @
    mut.acquire.unsafe-acquire
    mut.acquire.unsafe-acquire
    mut.lock.release.unsafe-release
    mut.lock.release.unsafe-release

[] > twice-lock-2
  mutex 2 > m
  seq > @
    m.acquire > a1!
    QQ.io.stdout "Acquired a1\n"
    m.acquire > a2!
    QQ.io.stdout "Acquired a2\n"
    a2.release
    QQ.io.stdout "Released a2\n"
