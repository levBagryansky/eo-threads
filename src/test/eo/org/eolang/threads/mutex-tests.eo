+alias org.eolang.threads.mutex
+alias org.eolang.threads.thread
+architect yegor256@gmail.com
+home https://github.com/objectionary/eo-threads
+junit
+package org.eolang.threads
+version 0.0.0

[] > unsafe-lock-1
  mutex 100 > m
  seq > @
    m.acquire.unsafe-acquire
    m.lock.release.unsafe-release

[] > unsafe-lock-2
  mutex 1 > m
  seq > @
    m.acquire.unsafe-acquire
    m.lock.release.unsafe-release

[] > twice-lock
  mutex 2 > mut
  seq > @
    mut.acquire.unsafe-acquire
    mut.acquire.unsafe-acquire
    mut.lock.release.unsafe-release
    mut.lock.release.unsafe-release

[] > lock-with-threads
  memory 1 > mem
  mutex 1 > mut
  [x] > multiple-by-x
    seq > @
      mut.acquire.unsafe-acquire
      mem.write
        mem.times x
      mut.lock.release.unsafe-release
  thread > t1
    multiple-by-x 2
  thread > t2
    multiple-by-x 3
  seq > @
    t1.start
    t2.start
    t1.join
    t2.join
    eq.
      mem
      6
